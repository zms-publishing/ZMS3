<script>
function zmiDeleteRow(id) {
	if (confirm(getZMILangStr('MSG_CONFIRM_DELOBJ'))) {
		$('form.form-horizontal:first').append(''
			+ '<input type="hidden" name="id" value="' + id +'">'
			+ '<input type="hidden" name="btn" value="' + getZMILangStr('BTN_DELETE') +'">'
			)
			.submit();
	}
}
</script>

