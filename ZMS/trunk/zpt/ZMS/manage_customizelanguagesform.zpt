<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
<tal:block tal:content="structure python:here.zmi_html_head(here,request)">zmi_html_head</tal:block>
<body tal:attributes="class python:' '.join(['zmi',request['lang'],'customizelanguages',here.meta_id])">
<tal:block tal:content="structure python:here.zmi_body_header(here,request,options=here.customize_manage_options)">zmi_body_header</tal:block>
<div id="zmi-tab">
<tal:block tal:content="structure python:here.zmi_breadcrumbs(here,request)">zmi_breadcrumbs</tal:block>

<script>
</script>

<tal:block tal:define="global langIds python:here.getLangIds(sort=True)">

<form class="form-horizontal" name="form0" action="manage_changeLanguages" method="post" onsubmit="return form0OnSubmit(this)" enctype="multipart/form-data">
	<input type="hidden" name="lang" tal:attributes="value request/lang">
	<legend tal:content="python:here.getZMILangStr('TAB_LANGUAGES')">Languages</legend>
	<p class="well well-small" tal:content="structure python:here.getZMILangStr('MSG_MULTILANG')">well</p>
	<table class="table table-striped table-bordered table-hover zmi-sortable">
	<colgroup>
		<col width="1em"/>
	</colgroup>
	<thead>
	<tr>
		<th></th>
		<th title="ISO-639/2" tal:content="python:here.getZMILangStr('ATTR_ID')">Id</th>
		<th tal:content="python:here.getZMILangStr('ATTR_LANG')">Language</th>
		<th tal:content="python:here.getZMILangStr('ATTR_PARENT')">Parent</th>
		<th>Interface</th>
	</tr>
	</thead>
	<tbody>
	<tal:block tal:define="global langStack python:[]">
		<tal:block tal:repeat="langNode python:here.getLangTree()">
			<tal:block tal:define="global sk python:langNode[0]; si python:langNode[1]; langId sk; langObj python:here.getLang(langId)">
				<tal:block tal:condition="python:si['parent'] in langStack and not langStack[-1]==si['parent']">
					<tal:block tal:repeat="i python:range(len(langStack)-langStack.index(si['parent'])-1)">
						<tal:block tal:define="dummy python:langStack.remove(langStack[-1])"></tal:block>
					</tal:block>
				</tal:block>
				<tal:block tal:condition="not:python:si['parent'] in langStack and not langStack[-1]==si['parent']">
					<tal:block tal:define="dummy python:langStack.append(si['parent'])"></tal:block>
				</tal:block>
				<tr tal:attributes="id python:'lang%s'%'_'.join(langStack+[langId])">
					<td><input type="checkbox" name="ids:list" tal:attributes="value python:langId" tal:condition="python:langId!=here.getPrimaryLanguage()"></td>
					<td><tal:block tal:content="langId">langId</tal:block></td>
					<td><input type="text" tal:attributes="name python:'%s_label'%langId; value python:langObj['label']"></td>
					<td>
						<select tal:attributes="name python:'%s_parent'%langId">
							<option tal:repeat="langId langIds"></option>
						</select>
					</td>
					<td>
						<select tal:attributes="name python:'%s_manage'%langId">
							<option tal:repeat="manage_lang python:here.get_manage_langs()" tal:attributes="selected python:['','selected'][int(langObj.get('manage')==manage_lang)]" tal:content="python:here.getLangStr('LANG',manage_lang)">manage_lang</option>
						</select>
					</td>
				</tr>
			</tal:block>
		</tal:block>
	</tal:block>
	<tr>
		<td><i class="icon-plus"></i></td>
		<td><input type="text" name="languaged_id"></td>
		<td><input type="text" name="languaged_label"></td>
		<td>
			<select name="language_parent">
				<option tal:repeat="langId langIds"></option>
			</select>
		</td>
		<td>
			<select name="language_manage">
				<option tal:repeat="manage_lang python:here.get_manage_langs()" tal:content="python:here.getLangStr('LANG',manage_lang)">manage_lang</option>
			</select>
		</td>
	</tr>
	</tbody>
	</table>
	<button name="btn" type="submit" class="btn btn-primary" tal:attributes="value python:here.getZMILangStr('BTN_SAVE')" tal:content="python:here.getZMILangStr('BTN_SAVE')">Save</button>
	<button name="btn" type="submit" class="btn" tal:attributes="value python:here.getZMILangStr('BTN_DELETE')" tal:content="python:here.getZMILangStr('BTN_DELETE')">Delete</button>
</form>

<form class="form-horizontal" name="form0" action="manage_changeLanguages" method="post" onsubmit="return form0OnSubmit(this)" enctype="multipart/form-data">
	<input type="hidden" name="lang" tal:attributes="value request/lang">
	<legend tal:content="python:here.getZMILangStr('ATTR_DICTIONARY')">Dictionary</legend>
	<p class="well well-small" tal:content="structure python:here.getZMILangStr('MSG_MULTILANGDICT')">well</p>
	<table class="table table-striped table-bordered table-hover zmi-sortable">
	<colgroup>
		<col width="1em"/>
	</colgroup>
	<thead>
	<tr>
		<th></th>
		<th tal:content="python:here.getZMILangStr('ATTR_KEY')">Key</th>
		<th tal:repeat="langId langIds" tal:content="python:here.getLanguageLabel(langId)">Language-Label</th>
	</tr>
	</thead>
	<tbody>
	<tr tal:repeat="langDict python:here.getLangDict()">
		<td><input class="form-checkbox" type="checkbox" name="ids:list" tal:attributes="value python:langDict['key']; disabled python:['','disabled'][int(len(langDict.get('acquired',[]))>0)]"/></td>
		<td tal:attributes="title python:'getLangStr(\'%s\',lang)'%langDict['key']" tal:content="python:langDict['key']">Key</td>
		<td tal:repeat="langId langIds"><input type="text" tal:attributes="name python:'%s_value_%s'%(langDict['key'],langId); value python:langDict.get(langId,''); disabled python:['','disabled'][int(langId in langDict.get('acquired',[]))]"/></td>
	</tr>
	<tr>
		<td><i class="icon-plus"></i></td>
		<td><input type="text" name="_key"></td>
		<td tal:repeat="langId langIds"><input type="text" tal:attributes="name python:'_value_%s'%(langId)"/></td>
	</tr>
	</tbody>
	</table>
	<button name="btn" type="submit" class="btn btn-primary" tal:attributes="value python:here.getZMILangStr('BTN_SAVE')" tal:content="python:here.getZMILangStr('BTN_SAVE')">Save</button>
	&nbsp;
	<button name="btn" type="submit" class="btn" tal:attributes="value python:here.getZMILangStr('BTN_DELETE')" tal:content="python:here.getZMILangStr('BTN_DELETE')">Delete</button>
	<button name="btn" type="submit" class="btn" tal:attributes="value python:here.getZMILangStr('BTN_IMPORT')+'...'" tal:content="python:here.getZMILangStr('BTN_IMPORT')+'...'" onclick="$('#importLangDict').dialog({modal:true,title:$(this).text(),height:'auto',width:'auto'});return false;">Import...</button>
</form>

<div id="importLangDict" class="ui-helper-hidden">
<form class="form-horizontal" name="form0" action="manage_changeLanguages" method="post" onsubmit="return form0OnSubmit(this)" enctype="multipart/form-data">
	<input type="hidden" name="lang" tal:attributes="value request/lang">
	<div class="control-group">
		<label class="control-label" for="file"><i class="icon-folder-open"></i> <tal:block tal:content="python:here.getZMILangStr('ATTR_FILE')">File</tal:block></label>
		<div class="controls">
			<input name="file" type="file">
		</div><!-- .controls -->
	</div><!-- .control-group -->
	<div class="control-group">
		<label class="control-label" for="file" tal:content="python:here.getZMILangStr('OR')">or</label>
		<div class="controls">
			<select id="init" name="init" onfocus="zmiExpandConfFiles(this,'.langdict.')" onmouseover="zmiExpandConfFiles(this,'.langdict.')">
				<option value="">--- <tal:block tal:content="python:here.getZMILangStr('BTN_INIT')">Init</tal:block>... ---</option>
			</select>
		</div><!-- .controls -->
	</div><!-- .control-group -->
	<div class="control-group">
		<div class="controls">
				<button name="btn" type="submit" class="btn btn-primary" tal:attributes="value python:here.getZMILangStr('BTN_IMPORT')" tal:content="python:here.getZMILangStr('BTN_IMPORT')">Import</button>
				<button name="btn" type="submit" class="btn" tal:attributes="value python:here.getZMILangStr('BTN_CLOSE')" tal:content="python:here.getZMILangStr('BTN_CLOSE')" onclick="$('#importLangDict').dialog('close');return false;">Close</button>
		</div>
	</div>
</form>
</div><!-- #importLangDict -->

</tal:block>

<div style="clear:both;">&nbsp;</div>
</div><!-- #zmi-tab -->
<tal:block tal:content="structure python:here.zmi_body_footer(here,request)">zmi_body_footer</tal:block>
</body>
</html>