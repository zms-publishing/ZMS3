  <div class="form-small" style="padding:4px;">
  <dtml-in "getConfProperty('ZMS.Version.nodes',['{$}'])">
   <dtml-let node=sequence-item ob="getLinkObj(node,REQUEST)">
    <div class="form-small">    
     <dtml-if "ob is not None">
